            <div class="form-group">
                <label class="form-label">Office</label>
                <vc:pastunitcordinator></vc:pastunitcordinator>
                @*<input class="form-control" id="txtOffice" type="text" placeholder="">*@
            </div>
        </div>
            <br /><br />
            <div class="row">
                <div class="form-group mg-b-10-force">
                    
                    <label for="">Academic Session</label>
                    
                    <div class="row">
                    <div class="col-sm-3">
                        <div class="">
                            <input type="text" class="dateYear form-control" placeholder="Year" id="txtAcademicSessionYear">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="ate-input">
                            <input type="text" class="dateYear form-control" placeholder="Year" id="txtAcademicSessionYear2">
                        </div>
                    </div>
                    </div>
                </div>
            </div>
            @*</div>*@
            @*<div class="col-lg-4">
                <div class="form-group mg-b-10-force">
