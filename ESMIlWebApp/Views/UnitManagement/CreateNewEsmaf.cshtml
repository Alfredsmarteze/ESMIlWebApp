                    <label class="form-label">Surname</label>
                    <input id="rowId" type="hidden">
                    <input class="form-control" id="txtSurname" type="text" placeholder="">
                </div>

            </div>
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Othernames</label>
                    <input class="form-control" id="txtOthernames" type="text" placeholder="">
                </div>
            </div>
                            
            <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                    <label class="form-control-label">Gender</label>
                    <vc:gender></vc:gender>
                </div>
            </div>
                    
        </div>
        
        <br>

        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Phone Number 1</label>
                    <input class="form-control" id="txtPhoneNumber" type="text" placeholder="">
                </div>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input class="form-control" id="txtEmail" type="text" placeholder="">
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">House Address</label>
                    <input class="form-control" id="txtHouseAddress" type="text" placeholder="">
                </div>
            </div>
         </div>

         <br/>
         
         <div class="row">
