                        <div class="ate-input">
                            <input type="text" class="dateYear form-control" placeholder="Date" id="txtAcademicSessionYear2">
                        </div>
                    </div>
                </div>
            </div>*@
        </div>
        
        <br />
        
        <div class="text-center">
            <br />
            <button class="btn btn-primary" type="submit" id="saveRecord">Save</button>
        </div>
    </form>
</div>

@section scripts{

    <script>

        var saveUrl = "@Url.Action("AddOrUpdateEsmaf","ESMAF")";
        $.fn.clearForm=function(){
            this.each(function(){this.reset();})
        }
        $("#saveRecord").click(function (e) {
            e.preventDefault();

            var body = {
