@model DataStructure.ViewModel.FirstTimerDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-muted">First Timer</h4>
<h5 class="text-muted">View Record</h5>
<div class="container" style="background-color:lightblue">
    <form>
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Surname</label>
                    <input id="rowId" type="hidden" value="@Model.Id">
                    <input class="form-control" id="txtSurname" type="text" readonly value="@Model.Surname">
                </div>

            </div>
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Othernames</label>
                    <input class="form-control" id="txtOthernames" type="text" readonly value="@Model.Othernames">
                </div>
            </div>

        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Gender</label>
                    <input class="form-control" id="txtFacultyName" type="text" readonly value="@Model.Gender">
                </div>
            </div>

        </div>
        <br>

        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Phone Number 1</label>
                    <input class="form-control" id="txtPhoneNumber" type="text" readonly value="@Model.PhoneNumber">
                </div>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Department</label>
                    <input class="form-control" id="txtDepartmentName" type="text" readonly value="@Model.DepartmentName">
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Faculty</label>
                    <input class="form-control" id="txtFacultyName" type="text" readonly value="@Model.FacultyName">
                </div>
            </div>

            <br />

            <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                    <label for="">Date </label>
                    <div class="ate-input">
                        <div class="ate-input">
                            <input type="text" class="date form-control" readonly value="@Model.strDate" id="txtDateJoinVisiting">
                        </div>
                    </div>
                </div>
            </div><!-- col-4 -->
        </div>
        <br />
        <div class="col-4">
            <div class="form-group">
                <label class="form-label">Reason Of Coming</label>
                <input class="form-control" id="txtFacultyName" type="text" readonly value="@Model.ReasonOfComing">
            </div>
        </div>
        @*<div class="col-lg-4">
            <div class="form-group mg-b-10-force">
                <label class="form-control-label">Joining/Visiting</label>
                <vc:gender></vc:gender>
            </div>
        </div>*@
        
    </form>
</div>