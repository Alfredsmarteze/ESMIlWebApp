@model DataStructure.ViewModel.ProgrammeTableDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h5 class="text-muted">Add Programme</h5>
<div class="container" style="background-color:lightblue">
    <form id="clearFrm">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Speaker</label>
                    <input id="rowId" type="hidden">
                    <input class="form-control" id="txtSpeaker" type="text" value="@Model.Speaker" readonly placeholder="">
                </div>

            </div>
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Cordinator</label>
                    <input class="form-control" id="txtCordinator" type="text" value="@Model.Cordinator" readonly placeholder="">
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Programme</label>
                    <input class="form-control" id="txtProgramme" type="text" value="@Model.Programme" readonly placeholder="">
                </div>
            </div>
        </div>
        <br />
        <br>

        <div class="row">
            <div class="col-lg-4">
                <div class="form-group mg-b-10-force">
                    <label for="">Programme Date </label>
                    <div class="ate-input">
                        <div class="ate-input">
                            <input type="text" class="date form-control" placeholder="Date" value="@Model.strDate" id="txtProgrammeDate">
                        </div>
                    </div>
                </div>
            </div><!-- col-4 -->
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Note</label>
                    <input class="form-control" id="txtNote" value="@Model.Note" type="text" placeholder="">
                </div>
            </div>
            <br />
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Status</label>
                    <vc:programme-status></vc:programme-status>
                </div>
            </div>
            <br />
        </div>

        <div class="text-center">
            <br />
            <button class="btn btn-primary" type="submit" id="saveRecord">Save</button>
        </div>
    </form>
</div>

@section scripts{

    <script>

        $(document).ready(function () {
            $("#drpProgrammeStatus").val('@Model.ProgrammeStatus').trigger('change');
        });
    
    </script>
}