@model DataStructure.ViewModel.PresidentChargeDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 class="text-muted"> President Charge</h4>
<h5 class="text-muted">Capture new record</h5>

<div class="container" style="background-color:lightblue">
    <form id="clearFrm" class="justify-content-center">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label class="form-label">Surname</label>
                    <input id="rowId" value="@Model.Id" type="hidden">
                    <input class="form-control" id="txtSurname" value="@Model.Surname"  type="text" readonly placeholder="">
                </div>

            </div>
            <div class="col-6">
                <div class="form-group">
                    <label class="form-label">Firstname</label>
                    <input class="form-control" value="@Model.Firstname" id="txtFirstname" readonly type="text" placeholder="">
                </div>
            </div>

        </div>
        <br />
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label class="form-control-label">Charge</label>
                    <textarea class="form-control" id="txtCharge" type="text" readonly placeholder="">@Model.Charge</textarea>
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label class="form-label">Course Of Study</label>
                    <input class="form-control" id="txtCourseOfStudy" value="@Model.CourseOfStudy" type="text" readonly placeholder="">
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label class="form-label">Faculty</label>
                    <input class="form-control" id="txtFaculty" type="text" value="@Model.Faculty" readonly placeholder="">
                </div>
            </div>

        </div>
        <br />
        <div class="row">
            <div class="col-6 justify-content-center">
                <div class="form-group mg-b-10-force">
                    <label for="">Charge Date </label>
                    <div class="ate-input">
                        <div class="ate-input">
                            <input type="text" class="date form-control" placeholder="Date" readonly value="@Model.strChargeDate" id="txtChargeDate">
                        </div>
                    </div>
                </div>
            </div><!-- col-6 -->
            <div class="col-6">
                <div class="form-group">
                    <label class="form-label">Session</label>
                    <span>e.g 2022/2023</span><input class="form-control" value="@Model.Session" readonly id="txtSession" type="text" placeholder="">
                </div>
            </div>
        </div>
        <br />


    </form>
</div>

