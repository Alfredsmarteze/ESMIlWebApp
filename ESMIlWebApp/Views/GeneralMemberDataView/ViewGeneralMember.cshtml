@model DataStructure.ViewModel.GeneralMemberDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 class="text-muted">General Member View Page</h4>

<br />
<div class="container hideForm" style="background-color:lightblue">
    <h5 class="text-primary">Capture new record</h5>
    <div class="row">
        <form id="clearFrm">
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label">Surname</label>
                        <input id="rowId" type="hidden" readonly value="@Model.Id">
                        <input class="form-control" id="txtSurname" readonly value="@Model.Surname" type="text" placeholder="">
                    </div>

                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label">Firstname</label>
                        <input class="form-control" id="txtFirstname" type="text" readonly value="@Model.Firstname" placeholder="">
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label">Otherename</label>
                        <input class="form-control" id="txtOthername" type="text" readonly value="@Model.Othername" placeholder="">
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Gender</label>
                        <vc:gender></vc:gender>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <label for="">Phone Number</label>
                        <div class="">
                            <div class="">
                                <input type="text" class="form-control" placeholder="" readonly value="@Model.PhoneNumber" id="txtPhoneNumber">
                            </div>
                        </div>
                    </div>
                </div><!-- col-4 -->
                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <input class="form-control" id="txtEmail" type="text" value="@Model.Email" readonly placeholder="">
                    </div>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">State of origin</label>
                        <vc:state></vc:state>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">LGA</label>
                        <vc:lga></vc:lga>
                    </div>
                </div>
            </div>

            <br />
            <div class="row">

                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label">Hostel Address</label>
                        <input class="form-control" id="txtHostelAddress" type="text" readonly value="@Model.HostelAddress" placeholder="">
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label">Home Address</label>
                        <input class="form-control" id="txtHomeAddress" type="text" value="@Model.HouseAddress" readonly placeholder="">
                    </div>
                </div>

                <div />
            </div>
            <br />
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label">Course of Study</label>
                        <input class="form-control" id="txtCourseOfStudy" value="@Model.CourseOfStudy" type="text" readonly placeholder="">
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label">Faculty</label>
                        <input class="form-control" id="txtFaculty" type="text" value="@Model.Faculty" readonly placeholder="">
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label">Ambition</label>
                        <input class="form-control" id="txtAmbition" type="text" value="@Model.Ambition" readonly placeholder="">
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label">Social Media Address</label>
                        <input class="form-control" id="txtSocialMediaAddress" value="@Model.SocialMediaAddress" readonly type="text" placeholder="">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <label for="">Date Join ESM</label>
                        <div class="ate-input">
                            <div class="ate-input">
                                <input type="text" class="date form-control" placeholder="" value="@Model.strYearJoinESM" readonly id="txtDateJoinESM">
                            </div>
                        </div>
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <label for="">Year Of Entry</label>
                        <div class="ate-input">
                            <div class="ate-input">
                                <input type="text" class="date form-control" placeholder="" value="@Model.strYearOfEntry" readonly id="txtYearOfEntry">
                            </div>
                        </div>
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-4">
                    <div class="form-group mg-b-10-force">
                        <label for="">Date Of Birth</label>
                        <div class="ate-input">
                            <div class="ate-input">
                                <input type="text" class="date form-control" placeholder="" value="@Model.strDateOfBirth" readonly id="txtDateOfBirth">
                            </div>
                        </div>
                    </div>
                </div><!-- col-4 -->
            </div>

            <div class="text-center">
                <br />
                <button class="btn btn-primary" type="submit" id="saveRecord">Save</button>
                <br />
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script>

        $(document).ready(function () {
            $("#drpGender").val('@Model.Gender').trigger('change');
            $("#drpState").val('@Model.StateOfOrigin').trigger('change');
            $("#drpLga").val('@Model.LGA').trigger('change');

        });
        
    </script>
}