    @*<div style="overflow-x:scroll">*@
    <table id="generalMemberTable" width="100%" class="stripe hover">
        <thead>
            <tr>
                @* <th class="check-col" align="center"><input type="checkbox" name=selectAll value="1" id="example-select-all"></th>*@
                <th>Actions</th>
                <th>Surname</th>
                <th>Firstname</th>
