@inject SignInManager<ApplicationUser> signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ESMIlWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/jquery-datetimepicker/jquery.datetimepicker.css" />
    <link rel="stylesheet" href="~/css/custom2.css"/>
    <link rel="stylesheet" href="~/jqueryui/jquery-ui.min.css" />
    <link rel="stylesheet" href=~/css/dataTableSheet.css/>
    <link rel="stylesheet" href=~/css/StyleSheet.css/>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ESMIlWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-bright" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/image/esmLogodownload.jpeg" width="70" height="50" />ESM UniIlorin PS Chapter</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                         <li class="dropdown crea " style="margin-left:15px; margin-top:7px">
                            <a href="#" class="dropdown-toggle text-white" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Units</a>
                            <ul class="dropdown-menu flex-grow-1" role="menu">
                                 
                                <li class="nav-item shadow-lg">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="CreateNewPrayer">Prayer Unit</a>
                                </li>
                                <li class="nav-item shadow-lg">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="CreateNewBibleUnit">Bible Study Unit</a>
                                </li>
                                <li class="nav-item shadow-lg">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="CreateNewChoral">Choral Unit</a>
                                </li>
                                <li class="nav-item shadow-lg">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="CreateNewDme">DME Unit</a>
                                </li>
                                <li class="nav-item shadow-lg">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="CreateNewPublicityUnit">Publicity Unit</a>
                                </li>
                                <li class="nav-item shadow-lg">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="CreateNewUsheringUnit">Ushering Unit</a>
                                </li>
                                <li class="nav-item shadow-lg">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="CreateNewWelfareUnit">Welfare Unit</a>
                                </li>
                                <li class="nav-item shadow-lg">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="CreateNewTechnicalUnit">Technical Unit</a>
                                </li>
                                <li class="nav-item shadow-lg">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="CreateNewTransportUnit">Transport Unit</a>
                                </li>
                               </ul>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="ProgrammeDataTableView" asp-action="OurProgramme">Our Programme</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="GeneralMemberDataView" asp-action="GeneralMember">Members</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="ESMAFDataView" asp-action="AllPastExecutive">Our Past Executive</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        
                        
                        @if(signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item text-white" style="margin-top:7px">@*margin-left:15px;*@
                            <form method="post" asp-action="Logout" asp-controller="Account">
                                <button type="submit" class="nav-link btn btn-link py-0" style="width:auto">
                                    <span style="color:white"> Logout @User.Identity.Name</span>
                                </button>
                            </form>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="UnitManagement" asp-action="FirstTimer">First Timer</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="UnitManagement" asp-action="Esmaf">Our ESMAF Data</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="GeneralMemberDataView" asp-action="AllGeneralMember">Full Member Detail</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="TestimonyView" asp-action="AllTestimony">Testimony</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="ProgrammeDataTableView" asp-action="AllProgramme">Our Programme</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="ProgrammeDataTableView" asp-action="AddProgramme">Our Programme</a>
                            </li>
                            <li class="dropdown crea " style="margin-left:15px; margin-top:7px">
                                <a href="#" class="dropdown-toggle text-white" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Units Records</a>

                                <ul class="dropdown-menu flex-grow-1" role="menu">
                                    <li class="nav-item shadow-lg">
                                        <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="PrayerUnit">Prayer Unit</a>
                                    </li>
                                    <li class="nav-item shadow-lg">
                                        <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="BibleStudyUnit">Bible Study Unit</a>
                                    </li>
                                    <li class="nav-item shadow-lg">
                                        <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="ChoralUnit">Choral Unit</a>
                                    </li>
                                    <li class="nav-item shadow-lg">
                                        <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="DmeUnit">DME Unit</a>
                                    </li>
                                    <li class="nav-item shadow-lg">
                                        <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="PublicityUnit">Publicity Unit</a>
                                    </li>
                                    <li class="nav-item shadow-lg">
                                        <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="UsheringUnit">Ushering Unit</a>
                                    </li>
                                    <li class="nav-item shadow-lg">
                                        <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="WelfareUnit">Welfare Unit</a>
                                    </li>
                                    <li class="nav-item shadow-lg">
                                        <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="TechnicalUnit">Technical Unit</a>
                                    </li>
                                    <li class="nav-item shadow-lg">
                                        <a class="nav-link text-primary" asp-area="" asp-controller="UnitManagement" asp-action="TransportUnit">Transport Unit</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item list-unstyled float-right">
                            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="">
            @RenderBody()
        </main>
        @* Free Style Animation *@
        <br />
        <br />
        
        <div id="ball" class="animate rounded-circle text-succes h3 text-center">
            <p>  “Equipping the Saint for service” Ephesians 4:12</p>
        </div>
    </div>

   

    <footer class=" footer text-muted">
        <div class="container text-muted text-center">
              &copy; @DateTime.Now.Year- ESM Unilorin PS
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/jqueryui/jquery-ui.min.js" ></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js" ></script>
    @*comment when publishing*@
    <script src="~/slib/popper.js/dist/umd/popper.min.js"></script>
    @*uncomment when publishing*@
