    <script src=~/lib/bootstrap/dist/js/bootstrap.min.js></script>
    <script src="~/jquery-datetimepicker/jquery.datetimepicker.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.12.1/dataRender/ellipsis.js"></script>
    <script src=~/lib/bootstrap/dist/js/util.js></script>
    <script src=~/lib/bootstrap/dist/js/dropdown.js></script>
    <script src="~/js/dependencies.min.js"></script>
    <script src="~/js/JavaScriptUtils.js"></script>
    <script src="~/statelga/jquery.statelga.js"></script>
    <script src="~/statelga/jquery.ucfirst.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   @* <script src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script src="~/bootbox/bootbox.locales.min.js"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
